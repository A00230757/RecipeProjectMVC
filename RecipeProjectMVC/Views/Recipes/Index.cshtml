                @Html.DisplayFor(modelItem => item.Tools)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CookingSteps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ranking)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecipeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecipeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecipeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
